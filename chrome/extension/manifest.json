{
  "manifest_version": 2,
  "name": "Konnakol",
  "version": "0.0.1",

  "description": "Play Konnakol on the web!",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Konnakol"
    // "default_popup": "popup.html"
  },

  "author": "Arthur Carabott",

  "background": {
    "page": "background.html",
    "persistent": false
  },

  "homepage_url": "https://github.com/acarabott/ohm-konnakol",
  "incognito": "split",
  "minimum_chrome_version": "50",
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "contextMenus"
  ]
}
